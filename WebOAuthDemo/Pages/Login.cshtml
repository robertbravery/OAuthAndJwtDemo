@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserLogins.ID" />
            <div class="form-group">
                <label asp-for="UserLogins.UserName" class="control-label"></label>
                <input asp-for="UserLogins.UserName" class="form-control" />
                <span asp-validation-for="UserLogins.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLogins.Password" class="control-label"></label>
                <input asp-for="UserLogins.Password" class="form-control" />
                <span asp-validation-for="UserLogins.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
